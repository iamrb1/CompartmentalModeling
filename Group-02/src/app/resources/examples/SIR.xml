<?xml version="1.0" encoding="utf-8" ?>
<simulation name="SIR Model">
    <compartments>
        <compartment name="S" initial="999" />
        <compartment name="I" initial="1" />
        <compartment name="R" initial="0" />
    </compartments>
    <parameters>
        <parameter name="beta" value="0.3" />
        <parameter name="gamma" value="0.1" />
        <parameter name="delta" value="0.1" />
        <parameter name="N" value="1000" />
    </parameters>
    <connections>
        <connection name="infection" from="S" to="I" rate="beta * S * I / N" />
        <connection name="recovery" from="I" to="R" rate="gamma * I" />
    </connections>
</simulation>