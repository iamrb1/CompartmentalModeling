# Compiler and flags
CXX := g++
CXXFLAGS := -std=c++23 -Wall -Wextra -IWordLang/

# Targets
TARGET := wordlang
SRC_DIR := .
WORDLANG_DIR := WordLang

# Source files
SRCS := $(SRC_DIR)/main.cpp $(WORDLANG_DIR)/WordLang.cpp
OBJS := $(SRCS:.cpp=.o)

# Default target
all: $(TARGET)

# Link object files into executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Compile .cpp files to .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

# Clean build artifacts
clean:
	rm -f $(TARGET) $(OBJS)

.PHONY: all clean