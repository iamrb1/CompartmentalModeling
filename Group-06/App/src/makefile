# Compiler and flags
CXX := g++
CXXFLAGS := -std=c++23 -Wall -Wextra -IWordLang/ -I../../ErrorManager/

# Targets
TARGET := app
SRC_DIR := .
WORDLANG_DIR := WordLangApp
ERRORMGR_DIR := ../../ErrorManager

# Source files
SRCS := $(SRC_DIR)/main.cpp $(WORDLANG_DIR)/WordLang.cpp $(WORDLANG_DIR)/FileSource.cpp $(WORDLANG_DIR)/WordListManager.cpp $(WORDLANG_DIR)/TokenManager.cpp $(ERRORMGR_DIR)/ErrorManager.cpp
OBJS := $(SRCS:.cpp=.o)

# Default target
all: $(TARGET)

# Link object files into executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Compile .cpp files to .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

# Clean build artifacts
clean:
	rm -f $(TARGET) $(OBJS)

.PHONY: all clean